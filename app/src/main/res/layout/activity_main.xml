<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:screenOrientation="landscape"
    android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bakgraund" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imagePlayer"
        android:layout_width="45dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toEndOf="@id/namePlayer"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon1" />

    <TextView
        android:id="@+id/namePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:text="Unknown"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageCount"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        app:layout_constraintDimensionRatio="h,10:10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/gold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCount"
        app:srcCompat="@drawable/ramka" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        app:layout_constraintBottom_toBottomOf="@id/imageView3"
        app:layout_constraintEnd_toEndOf="@id/imageView3"
        app:layout_constraintStart_toStartOf="@id/imageView3"
        app:layout_constraintTop_toTopOf="@id/imageView3"
        app:spanCount="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="35dp"
                android:layout_height="43dp"
                android:src="@drawable/icon1" />

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="35dp"
                android:layout_height="43dp"
                android:src="@drawable/icon2" />

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="35dp"
                android:layout_height="43dp"
                android:src="@drawable/icon3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon4"
                android:layout_width="35dp"
                android:layout_height="43dp"
                android:src="@drawable/icon4" />

            <ImageView
                android:id="@+id/icon5"
                android:layout_width="35dp"
                android:layout_height="43dp"
                android:src="@drawable/icon1" />

            <ImageView
                android:id="@+id/icon6"
                android:layout_width="35dp"
                android:layout_height="43dp"
                android:src="@drawable/icon8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon7"
                android:layout_width="35dp"
                android:layout_height="43dp"
                android:src="@drawable/icon5" />

            <ImageView
                android:id="@+id/icon8"
                android:layout_width="35dp"
                android:layout_height="43dp"
                android:src="@drawable/icon7" />

            <ImageView
                android:id="@+id/icon9"
                android:layout_width="35dp"
                android:layout_height="43dp"
                android:src="@drawable/icon9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon10"
                android:layout_width="35dp"
                android:layout_height="43dp"
                android:src="@drawable/icon8" />

            <ImageView
                android:id="@+id/icon11"
                android:layout_width="35dp"
                android:layout_height="43dp"
                android:src="@drawable/icon10" />

            <ImageView
                android:id="@+id/icon12"
                android:layout_width="35dp"
                android:layout_height="43dp"
                android:src="@drawable/icon5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon13"
                android:layout_width="35dp"
                android:layout_height="43dp"
                android:src="@drawable/icon6" />

            <ImageView
                android:id="@+id/icon14"
                android:layout_width="35dp"
                android:layout_height="43dp"
                android:src="@drawable/icon7" />

            <ImageView
                android:id="@+id/icon15"
                android:layout_width="35dp"
                android:layout_height="43dp"
                android:src="@drawable/icon10" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="200dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/bet" />

    <ImageView
        android:id="@+id/imageSpin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/spin"
        android:layout_marginBottom="15dp"
        tools:ignore="OnClick,UsingOnClickInXml" />


    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="80dp"
        android:text="1"
        android:textColor="@color/white"
        android:textColorHint="#E3E3E3"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/minusButton"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/minusButton" />

    <TextView
        android:id="@+id/countWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageCount"
        app:layout_constraintEnd_toEndOf="@+id/imageCount"
        app:layout_constraintStart_toStartOf="@+id/imageCount"
        app:layout_constraintTop_toTopOf="@+id/imageCount" />

    <Button
        android:id="@+id/plusButton"
        android:layout_width="46dp"
        android:layout_height="35dp"
        android:layout_marginEnd="4dp"
        android:alpha="0"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        tools:ignore="OnClick,UsingOnClickInXml" />

    <Button
        android:id="@+id/minusButton"
        android:layout_width="61dp"
        android:layout_height="39dp"
        android:alpha="0"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        tools:ignore="OnClick,UsingOnClickInXml" />

</androidx.constraintlayout.widget.ConstraintLayout>